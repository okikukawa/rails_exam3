<h1>プロフィールを編集する</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local:true)do|f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <br>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <br>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.label :image  %>
  <br>
  <%= f.file_field :image  %>
  <br>
  <br>
  <%= f.submit "変更する" %>
<% end %>
<br>
<p><%= link_to "戻る",user_path(@user.id) %></p>
<%= link_to "投稿一覧に戻る",records_path %>
