<div class="container">
  <% if notice.present? %>
    <p  class="alert alert-success" ><%= notice %></p>
  <% end %>
  <h1>Profile</h1>
  <p><%= image_tag @user.image.url, class:"image-vw" if @user.image && @user.image.url %></p>
  <br>
  <br>
  <p>Name：<%= @user.name %></p>
  <p>Email：<%= @user.email %></p>
  <br>
  <% if @user.id == current_user.id %>
    <p><%= link_to 'Edit', edit_user_path(@user.id) %></p>
    <p><%= link_to 'Favorite List', favorites_path %></p>
  <% end %>
  <br>
  <h3>フォロー</h3>
  <% @user_follow = User.find(params[:id]).following %>
  <% @user_follow.each do |user| %>
    <%= user.name %><br>
    <% unless user.id == current_user.id %>
      <li>
        <div class="item">
          <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
        </div>
      </li>
    <% end %>
    <%= render 'follow_form', user: user %>
    <br>
  <% end %>
  <br>
  <h3>フォロワー</h3>
  <% @user_follower = User.find(params[:id]).followers %>
  <% @user_follower.each do |user| %>
    <%= user.name %><br>
    <% unless user.id == current_user.id %>
      <li>
        <div class="item">
          <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
        </div>
      </li>
    <% end %>
    <%= render 'follow_form', user: user %>
    <br>
  <% end %>
  <br>
  <p><%= link_to 'Back to top',records_path %></p>
</div>
