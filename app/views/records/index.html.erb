<%= notice %>
<h1>投稿一覧</h1>
<% @record.each do |record| %>
  <p><%= record.content %></p>
  <%= link_to '詳細',record_path(record.id) %>
  <%= link_to '編集',edit_record_path(record.id) %>
  <%= link_to '削除',record_path(record.id),method: :delete, data: { confirm: '本当に削除しますか？' } %>
<% end %>
<p><%= link_to '投稿する',new_record_path %></p>
